    <script>
        // Hide splash screen after animation completes
        setTimeout(() => {
            document.getElementById('splash-screen').style.display = 'none';
        }, 3300);
        
        // Add active class to current nav item
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function() {
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Mobile navigation
        document.querySelectorAll('.mobile-nav-link').forEach(link => {
            link.addEventListener('click', function() {
                document.querySelectorAll('.mobile-nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Feed filters functionality
        document.addEventListener('DOMContentLoaded', function() {
            const feedFilters = document.querySelectorAll('.feed-filter');
            
            feedFilters.forEach(filter => {
                filter.addEventListener('click', function() {
                    // Remove active class from all filters
                    feedFilters.forEach(f => f.classList.remove('active'));
                    
                    // Add active class to clicked filter
                    this.classList.add('active');
                    
                    // Get filter type
                    const filterType = this.textContent.toLowerCase();
                    
                    // Filter posts based on type
                    filterPosts(filterType);
                });
            });
            
            // Function to filter posts
            function filterPosts(filterType) {
                const posts = document.querySelectorAll('.card');
                
                posts.forEach(post => {
                    const postTypeElement = post.querySelector('.post-type-indicator');
                    
                    if (!postTypeElement) return;
                    
                    const postType = postTypeElement.textContent.toLowerCase();
                    
                    if (filterType === 'all') {
                        post.style.display = 'block';
                    } else if (postType.includes(filterType)) {
                        post.style.display = 'block';
                    } else {
                        post.style.display = 'none';
                    }
                });
            }
            
            // Initialize connection buttons
            const connectionButtons = document.querySelectorAll('.connection-button');
            connectionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    if (this.textContent === 'Connect') {
                        this.textContent = 'Pending';
                        this.style.backgroundColor = '#90CAF9';
                    } else if (this.textContent === 'Pending') {
                        this.textContent = 'Connect';
                        this.style.backgroundColor = '#1E88E5';
                    }
                });
            });
        });
        
        // Post engagement functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Like/heart functionality
            const heartIcons = document.querySelectorAll('.card .fa-heart');
            heartIcons.forEach(icon => {
                icon.addEventListener('click', function() {
                    const countElement = this.nextElementSibling;
                    let count = parseInt(countElement.textContent);
                    
                    if (this.classList.contains('far')) {
                        // Like
                        this.classList.remove('far');
                        this.classList.add('fas');
                        this.style.color = '#e91e63';
                        count++;
                    } else {
                        // Unlike
                        this.classList.remove('fas');
                        this.classList.add('far');
                        this.style.color = '';
                        count--;
                    }
                    
                    countElement.textContent = count;
                });
            });
            
            // Share functionality
            const shareIcons = document.querySelectorAll('.card .fa-share');
            shareIcons.forEach(icon => {
                icon.addEventListener('click', function() {
                    const postTitle = this.closest('.card').querySelector('.card-title').textContent;
                    alert(`Sharing "${postTitle}" to your network`);
                });
            });
            
            // Initialize heart icons as regular (not filled)
            heartIcons.forEach(icon => {
                if (!icon.classList.contains('far')) {
                    icon.classList.add('far');
                }
            });
        });
        
        // Explore Page Functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Search functionality
            const searchInput = document.getElementById('search-input');
            const searchResults = document.getElementById('search-results');
            const searchHistoryItems = document.getElementById('search-history-items');
            const searchResultsItems = document.getElementById('search-results-items');
            
            // Sample user data - in a real app, this would come from your database
            const users = [
                { username: 'sarahjohnson', name: 'Sarah Johnson', avatar: 'S', verified: true },
                { username: 'michaelchen', name: 'Michael Chen', avatar: 'M', verified: false },
                { username: 'aishapatel', name: 'Aisha Patel', avatar: 'A', verified: true },
                { username: 'jameswilson', name: 'James Wilson', avatar: 'J', verified: false },
                { username: 'elenarodriguez', name: 'Elena Rodriguez', avatar: 'E', verified: true }
            ];
            
            // Search history from local storage
            let searchHistory = JSON.parse(localStorage.getItem('searchHistory')) || [];
            
            // Render search history
            function renderSearchHistory() {
                searchHistoryItems.innerHTML = '';
                searchHistory.slice(0, 5).forEach(term => {
                    const historyItem = document.createElement('div');
                    historyItem.className = 'search-history-item';
                    historyItem.innerHTML = `
                        <i class="fas fa-history"></i>
                        <div class="search-history-text">${term}</div>
                        <i class="fas fa-times search-history-remove"></i>
                    `;
                    searchHistoryItems.appendChild(historyItem);
                    
                    // Click on history item
                    historyItem.querySelector('.search-history-text').addEventListener('click', () => {
                        searchInput.value = term;
                        searchUsers(term);
                    });
                    
                    // Remove history item
                    historyItem.querySelector('.search-history-remove').addEventListener('click', (e) => {
                        e.stopPropagation();
                        searchHistory = searchHistory.filter(item => item !== term);
                        localStorage.setItem('searchHistory', JSON.stringify(searchHistory));
                        renderSearchHistory();
                    });
                });
            }
            
            // Clear all search history
            document.querySelector('.search-history-clear').addEventListener('click', () => {
                searchHistory = [];
                localStorage.setItem('searchHistory', JSON.stringify(searchHistory));
                renderSearchHistory();
            });
            
            // Search for users
            function searchUsers(query) {
                if (!query) {
                    searchResultsItems.innerHTML = '';
                    return;
                }
                
                const results = users.filter(user => 
                    user.username.toLowerCase().includes(query.toLowerCase()) || 
                    user.name.toLowerCase().includes(query.toLowerCase())
                );
                
                searchResultsItems.innerHTML = '';
                
                if (results.length === 0) {
                    searchResultsItems.innerHTML = '<div style="padding: 15px; text-align: center;">No users found</div>';
                    return;
                }
                
                results.forEach(user => {
                    const resultItem = document.createElement('div');
                    resultItem.className = 'search-result-item';
                    resultItem.innerHTML = `
                        <div class="search-result-avatar">${user.avatar}</div>
                        <div class="search-result-info">
                            <div class="search-result-username">
                                ${user.username} ${user.verified ? '<i class="fas fa-check-circle" style="color: #0095F6; font-size: 12px;"></i>' : ''}
                            </div>
                            <div class="search-result-name">${user.name}</div>
                        </div>
                    `;
                    searchResultsItems.appendChild(resultItem);
                    
                    // Click on result item
                    resultItem.addEventListener('click', () => {
                        // In a real app, navigate to user profile
                        alert(`Navigating to ${user.username}'s profile`);
                        
                        // Add to search history
                        if (!searchHistory.includes(user.username)) {
                            searchHistory.unshift(user.username);
                            if (searchHistory.length > 10) searchHistory.pop();
                            localStorage.setItem('searchHistory', JSON.stringify(searchHistory));
                        }
                    });
                });
            }
            
            // Show search results when input is focused
            searchInput.addEventListener('focus', () => {
                searchResults.classList.add('active');
                renderSearchHistory();
            });
            
            // Hide search results when clicking outside
            document.addEventListener('click', (e) => {
                if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
                    searchResults.classList.remove('active');
                }
            });
            
            // Search as user types
            searchInput.addEventListener('input', () => {
                const query = searchInput.value.trim();
                searchUsers(query);
            });
            
            // Explore grid interactions
            const exploreItems = document.querySelectorAll('.explore-item');
            
            exploreItems.forEach(item => {
                // Double tap to like
                let lastTap = 0;
                item.addEventListener('touchend', function(e) {
                    const currentTime = new Date().getTime();
                    const tapLength = currentTime - lastTap;
                    if (tapLength < 300 && tapLength > 0) {
                        // Double tap detected
                        const heartIcon = item.querySelector('.fa-heart');
                        const heartCount = item.querySelector('.fa-heart + span');
                        
                        if (heartIcon.classList.contains('fas')) {
                            heartIcon.classList.remove('fas');
                            heartIcon.classList.add('far');
                            heartCount.textContent = parseInt(heartCount.textContent) - 1;
                        } else {
                            heartIcon.classList.remove('far');
                            heartIcon.classList.add('fas');
                            heartCount.textContent = parseInt(heartCount.textContent) + 1;
                            
                            // Show heart animation
                            const heart = document.createElement('div');
                            heart.innerHTML = '<i class="fas fa-heart" style="color: white; font-size: 80px;"></i>';
                            heart.style.position = 'absolute';
                            heart.style.top = '50%';
                            heart.style.left = '50%';
                            heart.style.transform = 'translate(-50%, -50%)';
                            heart.style.opacity = '0';
                            heart.style.animation = 'fadeIn 0.3s ease forwards, fadeOut 0.5s ease 0.8s forwards';
                            item.appendChild(heart);
                            
                            setTimeout(() => {
                                heart.remove();
                            }, 1500);
                        }
                    }
                    lastTap = currentTime;
                });
                
                // Long press for preview (mobile)
                let pressTimer;
                item.addEventListener('touchstart', function(e) {
                    pressTimer = setTimeout(function() {
                        // Show preview
                        item.querySelector('.explore-item-overlay').style.opacity = '1';
                    }, 500);
                });
                
                item.addEventListener('touchend', function(e) {
                    clearTimeout(pressTimer);
                });
                
                // Click to view full post
                item.addEventListener('click', function() {
                    // In a real app, navigate to post detail view
                    alert('Opening full post view');
                });
            });
            
            // Infinite scroll simulation
            const loadMoreBtn = document.querySelector('.card-action');
            let loadCount = 0;
            
            loadMoreBtn.addEventListener('click', function() {
                loadCount++;
                if (loadCount < 3) {
                    // Clone existing items to simulate loading more content
                    const grid = document.querySelector('.explore-grid');
                    const items = document.querySelectorAll('.explore-item');
                    
                    items.forEach(item => {
                        const clone = item.cloneNode(true);
                        grid.appendChild(clone);
                        
                        // Reattach event listeners to cloned items
                        clone.addEventListener('click', function() {
                            alert('Opening full post view');
                        });
                    });
                } else {
                    loadMoreBtn.textContent = 'No more content';
                    loadMoreBtn.disabled = true;
                }
            });
            
            // Pull to refresh simulation (for mobile)
            let touchStartY = 0;
            let touchEndY = 0;
            
            document.addEventListener('touchstart', function(e) {
                touchStartY = e.touches[0].clientY;
            }, false);
            
            document.addEventListener('touchend', function(e) {
                touchEndY = e.changedTouches[0].clientY;
                handleSwipe();
            }, false);
            
            function handleSwipe() {
                if (touchEndY - touchStartY > 100 && window.scrollY === 0) {
                    // Pull down detected at top of page
                    alert('Refreshing content...');
                    // In a real app, fetch new content here
                }
            }
        });
        
        // Initialize App Features
        document.addEventListener('DOMContentLoaded', function() {
            // Messages functionality has been removed
            const messagesNavMobile = document.getElementById('messages-nav-mobile');
            if (messagesNavMobile) {
                messagesNavMobile.addEventListener('click', function(e) {
                    e.preventDefault();
                    console.log('Messages functionality has been removed');
                });
            }
        });
    
    </script>
    
